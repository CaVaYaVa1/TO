table {
  width: 100%;
  margin-bottom: 1rem;
  border-collapse: collapse;
}

td, th {
  border: 1px solid #000;
  padding: 0.5rem 1rem;
  text-align: center;
  transition: all 0.2s;
}


td.disabled {
  opacity: 0.5;
}

hover:not(.disabled) {
  background: #eee;
  cursor: pointer;
}


.active {
  color: var(--primary-color);
  font-weight: bold;
}

.selected {
  color: blue;
}
